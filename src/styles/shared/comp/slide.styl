.comps
  position absolute
  height 100%
  z-index 2

  .comps-container
    position absolute
    widtn 100%
    height 100%
    transform translate3d(0,0,0)

    &.tween
      transition transform 0.7s ease-out-expo 0.5s
      transform translate3d(0,0,0) !important

  .intro
    position absolute
    width 100%
    height 100%
    background-color #fff
    transform translate3d(-102%,0,0)
    z-index 3

  .comp
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 2
    top: 50%;
    cursor pointer
    overflow hidden
    transform translateY(-50%)

  .frame
    overflow hidden

  .frame .border
    width 100%
    height 100%
    border 6px solid #fff
    z-index 10
    position absolute
    display block
    transform translate3d(0,0,1px)

  .text p
    transform translateY(-50%)

  .frame video
    position absolute
    width 100%
    top 0
    left 0
    z-index 1

  .frame .video
    position relative
    opacity 0

  .frame.colored .border
    border 6px solid #000

  .frame:hover .border
    border 6px solid #fe0000
