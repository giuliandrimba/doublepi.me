.logo.framed
  ul
    display none


.logo.hide
  display none


.logo
  position absolute
  width 302px
  height 204px
  overflow hidden
  opacity 0
  pointer-events none
  z-index 1

  &.center
    margin-left 0
    margin-right 0
    transform translateY(-50%) translateX(-50%)

  .border
    position absolute
    background-color white

  .border-top
    width 100%
    height 6px
    top 0
    left 0

  .border-bottom
    width 100%
    height 6px
    left 0
    bottom 0

  .border-left
    height 100%
    width 6px
    top 0
    left 0

  .border-right
    height 100%
    width 6px
    top 0
    right 0

  ul
    position absolute
    width 100%
    height 100%

  .v-line
    position absolute
    width 6px
    height 100%
    background-color #fff
    top 0
    left 0

  .h-line
    position absolute
    width 100%
    height 6px
    background-color #fff
    left 0
    top 0

  .v-line
    transform translate3d(0,0,0)

  .h-line:nth-child(1n)
    transform translate3d(0,0,0)

  .h-line:nth-child(2n)
    transform translate3d(0,0,0)

  .h-line:nth-child(3n)
    transform translate3d(0,0,0)

