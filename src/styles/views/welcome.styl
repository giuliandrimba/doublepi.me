.welcome.intro
  .background
    transition transform 0.7s ease-out-expo
    transform translate3d(0,0,0)

.welcome
  position absolute
  width 100%
  height 100%

  .logo
    z-index 3 !important

  .background
    position absolute
    width 100%
    height 100%
    z-index 0
    background-color #000
    transform translate3d(0,-100%,0)

  iframe
    position absolute
    width 100%
    height 100%
    z-index 2

  .works-link
    position absolute
    bottom 90px
    left 50%
    transform translateX(-50%)
    z-index 3
    width 55px
    height 13px
    cursor pointer
    overflow: hidden;

  .square
    width 23px
    height 9px
    position absolute
    left 0
    overflow hidden

  .lines
    position absolute
    height 13px
    width 23px
    right 0
    overflow hidden

  .lines2
    right -23px

  .lines .top, .lines .middle, .lines .bottom
    width 23px
    height 1px
    background-color #fff
    position absolute
    transform translate3d(-100%,0,0)

  .lines .middle
    top 4px

  .lines .bottom
    width 12px
    top 8px

  .works-link.intro

    .square .top, .square .bottom, .square .left, .square .right
        transition transform 1s ease-out-expo 1s
        transform translate3d(0,0,0)

    .lines .top, .lines .middle, .lines .bottom
      transition transform 0.5s ease-out-expo 1s
      transform translate3d(0,0,0)

    .lines .top
      transition-delay 1.5s

    .lines .middle
      transition-delay 1.6s

    .lines .bottom
      transition-delay 1.7s
      transition-duration 1s
      transform translate3d(0,0,0)

    .square, .lines2, .lines
      transition transform 0.7s ease-out-expo
      transform translate3d(0,0,0)

    .lines2
      transition-duration 0.4s

    .lines2 .bottom
      width 23px

    .lines2 .middle
      width 12px


  .works-link:hover

    .square, .lines2
      transition transform 0.7s ease-out-expo
      transform translate3d(-30px,0,0)

    .lines2
      transition transform 0.7s ease-out-expo
      transform translate3d(-100%,0,0)

    .lines1
      transition transform 0.7s ease-out-expo
      transform translate3d(-30px,0,0)

  .square .top, .square .bottom, .square .left, .square .right
    width 23px
    height 1px
    background-color #fff
    position absolute

  .square .top
    transform translate3d(-100%,0,0)

  .square .bottom
    bottom 0
    transform translate3d(+100%,0,0)

  .square .left, .square .right
    width 1px
    height 13px

  .square .left
    transform translate3d(0,+100%,0)

  .square .right
    right 0
    transform translate3d(0,-100%,0)
